<?xml version="1.0"?>
<rules xmlns="http://www.xebialabs.com/xl-deploy/xl-rules">

    <rule name="example.DeployedApplication.wait" scope="pre-plan">
        <conditions>
            <expression>specification.deployedOrPreviousApplication.waitTime is not None</expression>
        </conditions>
        <steps>
            <wait>
                <order>10</order>
                <description expression="true">"Waiting " + str(specification.deployedOrPreviousApplication.waitTime) + " seconds before starting the deployment"</description>
                <seconds expression="true">specification.deployedOrPreviousApplication.waitTime</seconds>
            </wait>
        </steps>
    </rule>


    <rule name="example.ArtifactDeployed.CREATE_MODIFY" scope="deployed">
        <conditions>
            <type>example.ArtifactDeployed</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
    		<os-script>
    			<target-host expression="true">deployed.container.host</target-host>
    			<script>scripts/deploy-artifact</script>
    		</os-script>
    	</steps>
    </rule>
    <rule name="example.ArtifactDeployed.DESTROY" scope="deployed">
        <conditions>
            <type>example.ArtifactDeployed</type>
            <operation>DESTROY</operation>
        </conditions>
        <steps>
            <os-script>
                <target-host expression="true">deployed.container.host</target-host>
                <script>scripts/undeploy-artifact</script>
            </os-script>
        </steps>
    </rule>


    <rule name="example.ResourceDeployed.CREATE_MODIFY" scope="deployed">
        <conditions>
            <type>example.ResourceDeployed</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <upload>
                <target-host expression="true">deployed.container.host</target-host>
                <target-path expression="true">deployed.container.home + "/resources" + deployed.file.name</target-path>
            </upload>
    	</steps>
    </rule>
    <rule name="example.ResourceDeployed.DESTROY" scope="deployed">
        <conditions>
            <type>example.ResourceDeployed</type>
            <operation>DESTROY</operation>
        </conditions>
        <steps>
            <delete>
                <target-host expression="true">deployed.container.host</target-host>
                <target-path expression="true">deployed.container.home + "/resources" + deployed.file.name</target-path>
            </delete>

        </steps>
    </rule>


    <rule name="example.DatasourceDeployed.CREATE_MODIFY" scope="deployed">
        <conditions>
            <type>example.DatasourceDeployed</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <steps>
            <template>
                <target-host expression="true">deployed.container.host</target-host>
                <target-path expression="true">deployed.container.home + "/conf/" + deployed.name</target-path>
                <template-path>templates/datasource.ftl</template-path>
                <freemarker-context>
                    <prop>myProp</prop>
                </freemarker-context>
            </template>
    	</steps>
    </rule>


    <rule name="example.Server.startStop" scope="plan">
        <planning-script>planning/start-stop-server.py</planning-script>
    </rule>


</rules>
